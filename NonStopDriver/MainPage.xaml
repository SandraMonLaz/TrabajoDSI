<Page
    x:Class="NonStopDriver.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NonStopDriver"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>

        <Grid.RowDefinitions>

            <RowDefinition Height="150"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="115"/>
            <RowDefinition Height="15*"/>

        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200*"/>
            <ColumnDefinition Width="360*"/>
            <ColumnDefinition Width="185*"/>
        </Grid.ColumnDefinitions>

        <!--Fondo-->
        <Grid.Background>
            <ImageBrush ImageSource="Assets/Fondo.png" Stretch="UniformToFill" />
        </Grid.Background>

        <!--Barra-->
        <Image Source="Assets/Barra.png" Grid.Row="0" Grid.Column="1" Margin="0,0,0,43"/>

        <!--Velocimetro y Habilidad-->
        <Image Source="Assets/Velometro.png" Grid.Column="2" Grid.Row="3"/>

        <!--Minimapa-->
        <Image  Source="Assets/Minimapa.png " Grid.Column="0" Grid.Row="3" Stretch="Uniform" Margin="27,5,33,57" />

        <!--Dinero-->
        <StackPanel Grid.Row="2" Grid.Column="0" Margin="27,26,0,0">
            <Image Source="Assets/BolsaDinero.png" Height="82" Width="70" HorizontalAlignment="Left" RenderTransformOrigin="0.5,0.5" Margin="70,0,0,0" UseLayoutRounding="False" d:LayoutRounding="Auto">
                <Image.RenderTransform>
                    <CompositeTransform Rotation="3"/>
                </Image.RenderTransform>
            </Image>
            <TextBlock Text="3456$" FontSize="40" Height="48" Width="209" HorizontalAlignment="Right" Margin="0,-100,0,0" />
        </StackPanel>

    </Grid>
</Page>
