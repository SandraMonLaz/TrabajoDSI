<Page
    x:Class="NonStopDriver.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NonStopDriver"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="7*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>


        <Grid.Background>
            <ImageBrush ImageSource="Assets/Fondo.png"/>
        </Grid.Background>
        
        <Image x:Name="map" Source="Assets/mapa.png" Stretch="UniformToFill" Grid.Row="0" Margin="130,67,130,10" Grid.ColumnSpan="2" />

        <Button x:Name="button"  Grid.Row="1" Grid.Column = "1" Margin="300,0,0,0" Height="58" Width="215">
            <Button.Background>
                <ImageBrush ImageSource="Assets/Boton.png"/>
            </Button.Background>
        </Button>

        <StackPanel Grid.Column="0" Grid.RowSpan="1" VerticalAlignment="Bottom"  Height="221" Margin="30,0,30,0">

            <StackPanel.Background>
                <ImageBrush ImageSource="Assets/Panel.png"/>
            </StackPanel.Background>
            
            <TextBlock  Text="Posiciona tu coche" FontSize="25" HorizontalAlignment="Center"/>

            <ListView x:Name="Lugares" SelectionMode="Multiple" HorizontalAlignment="Center">
                <x:String>(A)Callejón los Antonios</x:String>
                <x:String>(B)Entrada trasera</x:String>
                <x:String>(C)Mesón Paco</x:String>
                <x:String>(D)Boca de metro</x:String>
            </ListView>

        </StackPanel>

    </Grid>
</Page>
