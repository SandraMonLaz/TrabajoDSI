<Page
    x:Class="NonStopDriver.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NonStopDriver"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">


    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="7*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>

        <!--Fondo-->
        <Grid.Background>
            <ImageBrush ImageSource="Assets/Fondo.png"/>
        </Grid.Background>

        <!--Mapa-->
        <Image x:ConnectionId='2' x:Name="map" Source="Assets/mapa.png" Stretch= "Fill" Grid.Row="0" Margin="130,67,130,10" Grid.ColumnSpan="2" />

        <!--Iconos del mapa-->
        <Canvas Grid.Row="0" Grid.Column="1">

            <Image Source="Assets/IconoBanco.png"  Canvas.Left="210" Canvas.Top="402" Height="97" Width="91"/>
            <Image Source="Assets/DestinoIcono.png" Canvas.Top="107" Height="75" Width="70" Canvas.Left="10"  />
            <Image Source="Assets/A.png" Canvas.Top="415" Height="36" Width="43" Canvas.Left="331"/>
            <Image Source="Assets/C.png" Canvas.Top="397" Height="36" Width="43" Canvas.Left="141"/>
            <Image Source="Assets/D.png" Canvas.Top="523" Height="36" Width="43" Canvas.Left="275"/>
            <Image Source="Assets/Jugador.png" Canvas.Top="416" Height="35" Width="30" Canvas.Left="353"/>
            <Image Source="Assets/PoliciaIcono.png" Canvas.Top="107" Height="75" Width="75" Canvas.Left="836"/>

        </Canvas>

        <!--Boton-->
        <Button x:ConnectionId='3' x:Name="button"  Grid.Row="1" Grid.Column = "1" Margin="300,0,0,0" Height="58" Width="215">
            <Button.Background>
                <ImageBrush ImageSource="Assets/Boton.png"/>
            </Button.Background>
        </Button>

        <!--Lista de lugares-->
        <StackPanel Grid.Column="0" Grid.RowSpan="1" VerticalAlignment="Bottom"  Height="221" Margin="30,0,30,0">

            <StackPanel.Background>
                <ImageBrush ImageSource="Assets/Panel.png"/>
            </StackPanel.Background>

            <TextBlock  Text="Posiciona tu coche" FontSize="25" HorizontalAlignment="Center"/>

            <ListView x:ConnectionId='4' x:Name="Lugares" SelectionMode="Multiple" HorizontalAlignment="Center">
                <x:String>(A)Callejón los Antonios</x:String>
                <x:String>(B)Entrada trasera</x:String>
                <x:String>(C)Mesón Paco</x:String>
                <x:String>(D)Boca de metro</x:String>
            </ListView>

        </StackPanel>

    </Grid>
</Page>

